<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundLayer"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/SignUp_IV_OwnerProfilePhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/default_owner_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/SignUp_TV_textEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Email"
        android:textAllCaps="true"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/SignUp_V_viewEmailDivider"
        app:layout_constraintStart_toEndOf="@id/SignUp_IV_imageEmail"
        app:layout_constraintTop_toBottomOf="@id/SignUp_IV_OwnerProfilePhoto"/>

    <EditText
        android:id="@+id/SignUp_ET_inputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:gravity="top"
        android:hint="my@email.com"
        android:inputType="textEmailAddress"
        android:minHeight="35dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/SignUp_V_viewEmailDivider"
        app:layout_constraintStart_toEndOf="@id/SignUp_IV_imageEmail"
        app:layout_constraintTop_toBottomOf="@id/SignUp_TV_textEmail"
        tools:ignore="Autofill"/>

    <View
        android:id="@+id/SignUp_V_viewEmailDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/SignUp_ET_inputEmail"/>

    <ImageView
        android:id="@+id/SignUp_IV_imageEmail"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/shtrodel"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/SignUp_V_viewEmailDivider"
        app:layout_constraintStart_toStartOf="@id/SignUp_V_viewEmailDivider"
        app:layout_constraintTop_toTopOf="@id/SignUp_TV_textEmail"/>

    <TextView
        android:id="@+id/SignUp_TV_textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/SignUp_V_viewEmailDivider"
        app:layout_constraintStart_toEndOf="@id/SignUp_IV_imageEmail"
        app:layout_constraintTop_toBottomOf="@id/SignUp_V_viewEmailDivider"/>

    <EditText
        android:id="@+id/SignUp_ET_inputPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:gravity="top"
        android:hint="********"
        android:inputType="textPassword"
        android:minHeight="35dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/SignUp_V_viewEmailDivider"
        app:layout_constraintStart_toEndOf="@id/SignUp_IV_imageEmail"
        app:layout_constraintTop_toBottomOf="@id/SignUp_TV_textPassword"
        tools:ignore="Autofill"/>

    <ImageView
        android:id="@+id/SignUp_IV_imagePassword"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/lock"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/SignUp_V_viewPasswordDivider"
        app:layout_constraintStart_toStartOf="@id/SignUp_V_viewEmailDivider"
        app:layout_constraintTop_toTopOf="@id/SignUp_TV_textPassword"/>

    <View
        android:id="@+id/SignUp_V_viewPasswordDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/SignUp_ET_inputPassword"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SignUp_MB_buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Sign up"
        app:backgroundTint="@null"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


