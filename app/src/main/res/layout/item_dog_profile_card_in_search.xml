<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    >

    <RelativeLayout
        android:id="@+id/PCS_RL_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/PCS_IV_DogPicture"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:elevation="2dp"
            app:shapeAppearance="@style/CircularIconStyle"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/PCS_IV_DogPicture"
            android:layout_centerVertical="true"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/PCS_MTV_DogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dog Name"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/PCS_MTV_DogOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner email"
                android:textSize="15sp"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>