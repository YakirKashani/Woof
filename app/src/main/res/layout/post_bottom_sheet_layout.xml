<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/PBSL_SIV_dogPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/PBSL_TV_dogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dog name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/PBSL_SIV_dogPhoto"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/PBSL_SIV_ownerPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"/>
    </RelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/PBSL_SIV_postImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/PBSL_SIV_like"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/paw_heart"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/PBSL_MTV_PostDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a description of the post"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"/>

</LinearLayout>