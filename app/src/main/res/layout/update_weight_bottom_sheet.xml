<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/UWBS_SIV_DogPic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_dog_picture"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/UWBS_MTV_DogName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UWBS_SIV_DogPic"
        android:text="DogName"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/UWBS_MTV_CurrentWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UWBS_MTV_DogName"
        android:text="8 Kg"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/UWBS_TIL_NewWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New weight (Kg)"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="10dp"
        android:layout_below="@id/UWBS_MTV_CurrentWeight"
        android:padding="8dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/UWBS_TIET_NewWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/UWBS_Button_Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp"
        app:backgroundTint="@null"
        android:background="@drawable/purple_gradient_button_background"
        android:textColor="@color/white"
        android:layout_below="@id/UWBS_TIL_NewWeight"/>

</RelativeLayout>